@model IEnumerable<HappyCows.Models.Calf>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Telad</h2>

<p>
    @Html.ActionLink("Dodaj novo", "Create")
</p>

@using (Html.BeginForm())
{
    <div style="display:flex">
        <p style="position:relative;padding-top:7px">Krava:</p>@Html.DropDownList("CowId", null, "Prikaži sve", htmlAttributes: new { @class = "form-control", @style = "margin-left:10px" })
    </div>
    <br />
    <input type="submit" value="Filtriraj" />
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Ime", "Index", new { sortOrder = ViewBag.NameSortParm, CowId = ViewBag.CowFilter })
        </th>

        <th>
            @Html.ActionLink("Datum rođenja", "Index", new { sortOrder = ViewBag.DateSortParm, CowId = ViewBag.CowFilter })
        </th>
        <th>
            @Html.ActionLink("Krava", "Index", new { sortOrder = ViewBag.CowSortParm, CowId = ViewBag.CowFilter })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cow.Name)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
